<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="users-06122025-J1" author="Joao">
        <createTable tableName="users">
            <column name="id" type="uuid" defaultValueComputed="uuid_generate_v4()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="create_at" type="TIMESTAMP" />
            <column name="update_at" type="TIMESTAMP" />
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="unique_users_email"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="unique_users_username"/>
            </column>
            <column name="password" type="varchar(255)"/>
            <column name="first_name" type="VARCHAR(255)" />
            <column name="last_name" type="VARCHAR(255)" />
            <column name="is_enabled" type="bool" defaultValueBoolean="true" />
            <column name="tenant_id" type="uuid" />
            <column name="document" type="varchar(20)" />
        </createTable>
    </changeSet>

</databaseChangeLog>